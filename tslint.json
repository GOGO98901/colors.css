{
  "extends": [
    "tslint:recommended",
    "tslint-microsoft-contrib/recommended"
  ],
  "defaultSeverity": "error",
  "jsRules": {},
  "rules": {
    "indent": [
      true,
      "spaces"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never",
        "esSpecCompliant": true
      }
    ],
    "no-relative-imports": false,
    "max-line-length": false,
    "use-simple-attributes": false,
    "max-func-body-length": false,
    "curly": [true, "ignore-same-line"] ,
    "deprecation": {
      "severity": "warn"
    },
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "lowercase-last",
        "named-imports-order": "case-insensitive"
      }
    ],
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace"
    ],
    "export-name": false,
    "import-name": false,
    "forin": false,
    "no-for-in": false,
    "prefer-type-cast": false,
    "non-literal-fs-path": false
  }
}
